{
    "name": "mdpub-wpblocks",
    "version": "0.1.0",
    "description": "Markdown を Gutenberg ブロックに変換し WordPress REST API 経由で投稿するツール",
    "type": "module",
    "bin": {
        "mdpub": "./bin/mdpub.mjs"
    },
    "scripts": {
        "convert": "node scripts/convert.mjs",
        "upload-media": "node scripts/upload-media.mjs",
        "publish": "node scripts/publish.mjs",
        "pipeline": "node scripts/pipeline.mjs",
        "sync": "node scripts/sync.mjs",
        "wp:start": "wp-env start",
        "wp:stop": "wp-env stop",
        "wp:destroy": "wp-env destroy",
        "init": "node bin/mdpub.mjs init",
        "prepare": "husky",
        "test": "vitest run",
        "lint": "eslint \"lib/**/*.mjs\" \"scripts/**/*.mjs\" \"test/**/*.mjs\" \"bin/**/*.mjs\" && markdownlint-cli2 \"**/*.md\" \"#node_modules\"",
        "format": "prettier --write \"**/*.{mjs,json,md}\" && eslint --fix \"lib/**/*.mjs\" \"scripts/**/*.mjs\" \"test/**/*.mjs\" \"bin/**/*.mjs\"",
        "fix": "npm run format && npm run lint"
    },
    "author": "sakashita44",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/sakashita44/mdpub-wpblocks.git"
    },
    "dependencies": {
        "@wordpress/block-library": "^9.39.0",
        "@wordpress/blocks": "^15.12.0",
        "gray-matter": "^4.0.3",
        "happy-dom": "^20.6.0",
        "markdown-it": "^14.1.1",
        "markdown-it-container": "^4.0.0",
        "yaml": "^2.8.2"
    },
    "devDependencies": {
        "@wordpress/env": "^10.39.0",
        "@eslint/js": "^10.0.1",
        "eslint": "^10.0.0",
        "globals": "^17.3.0",
        "husky": "^9.1.7",
        "lint-staged": "^16.2.7",
        "markdownlint-cli2": "^0.20.0",
        "prettier": "^3.8.1",
        "vitest": "^4.0.18"
    }
}
